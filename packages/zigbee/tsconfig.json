{
  "extends": "@homy/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "ts-node": {
    "experimentalResolver": true,
    "esm": true,
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc-experimental"
  }
}
